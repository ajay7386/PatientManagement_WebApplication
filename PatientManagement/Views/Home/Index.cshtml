@model UserRequest;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row justify-content-center align-items-center w-20">
        <form asp-action="Login" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col col-sm-4 form-group"></div>
                <div class="col col-sm-4 form-group">
                    <div class="col col-sm-4"><label asp-for="UserName" class="control-label" style="padding-right:65px;"></label></div>
                    <div class="col col-sm-12 form-group">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col col-sm-4 form-group"></div>
            </div>
            <div class="row">
                <div class="col col-sm-4 form-group"></div>
                <div class="col col-sm-4 form-group">
                    <div class="col col-sm-4 form-group"><label asp-for="Password" class="control-label" style="padding-right:65px;"></label></div>
                    <div class="col col-sm-12 form-group">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col col-sm-4 form-group"></div>
            </div>
            <div class="row">
                <div class="col col-sm-4 form-group">
                    &nbsp;
                </div>
            </div>
            <div class="row align-content-end" style="padding-left: 355px;">
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
